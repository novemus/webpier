            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_BUILD_TYPE": "Release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-static-debug",
            "displayName": "Static (Debug)",
            "description": "Configure static Debug build",
            "inherits": ["linux-base", "linux-static-release"],
