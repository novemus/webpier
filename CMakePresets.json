{
    "version": 6,
    "configurePresets": [
        {
            "name": "config-base",
            "hidden": true,
            "binaryDir": "${sourceParentDir}/out/$env{HOSTNAME}/build/${sourceDirName}/${presetName}",
            "cacheVariables": {
                "WEBPIER_SKIP_TEST_RULES": "OFF",
                "WEBPIER_SKIP_INSTALL_RULES": "OFF",
                "WEBPIER_SKIP_PACKAGE_RULES": "OFF"
            }
        },
        {
            "name": "static-config-base",
            "hidden": true,
            "inherits": "config-base",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF"
            },
            "installDir": "${sourceParentDir}/out/$env{HOSTNAME}/install/x64-static"
        },
        {
            "name": "shared-config-base",
            "hidden": true,
            "inherits": "config-base",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON"
            },
            "installDir": "${sourceParentDir}/out/$env{HOSTNAME}/install/x64"
        },
        {
            "name": "vcpkg-config-base",
            "hidden": true,
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "linux-base",
            "hidden": true,
            "cacheVariables": {
                "CPACK_PACKAGING_INSTALL_PREFIX": "/usr",
                "CMAKE_INSTALL_BINDIR": "share/webpier"
            }
        },
        {
            "name": "windows-static-debug",
            "displayName": "Static (Debug)",
            "description": "Configure static Debug build",
            "inherits": ["static-config-base", "vcpkg-config-base"],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>",
                "CMAKE_CONFIGURATION_TYPES": "Debug",
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-static-release",
            "displayName": "Static (Release)",
            "description": "Configure static Release build",
            "inherits": "windows-static-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CONFIGURATION_TYPES": "Release"
            }
        },
        {
