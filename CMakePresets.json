{
    "version": 6,
    "configurePresets": [
        {
            "name": "config-base",
            "hidden": true,
            "displayName": "Basic",
            "description": "Basic Configure Preset",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "WEBPIER_SKIP_TEST_RULES": "OFF",
                "WEBPIER_SKIP_INSTALL_RULES": "OFF",
                "WEBPIER_SKIP_PACKAGE_RULES": "OFF"
            }
        },
        {
            "name": "windows-static-debug",
            "displayName": "Static (Debug)",
            "description": "Configure Debug static build",
            "inherits": "config-base",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>",
                "CMAKE_CONFIGURATION_TYPES": "Debug",
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "installDir": "${sourceParentDir}/install/x64-static"
        },
        {
            "name": "windows-static-release",
            "displayName": "Static (Release)",
            "description": "Configure Release static build",
            "inherits": "windows-static-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CONFIGURATION_TYPES": "Release"
            }
        },
        {
            "name": "static-release",
            "displayName": "Static (Release)",
            "description": "Configure static Release build",
            "inherits": "config-base",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_BUILD_TYPE": "Release",
                "CPACK_PACKAGING_INSTALL_PREFIX": "/usr"
            },
            "condition": {
                "type": "inList",
                "string": "${hostSystemName}",
                "list": ["Linux", "Darwin"]
            },
            "installDir": "${sourceParentDir}/install/x64-static"
        },
        {
            "name": "static-debug",
            "displayName": "Static (Debug)",
            "description": "Configure static Debug build",
            "inherits": "static-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "shared-release",
            "displayName": "Shared (Release)",
            "description": "Configure static Release build",
            "inherits": "config-base",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_BUILD_TYPE": "Release",
                "CPACK_PACKAGING_INSTALL_PREFIX": "/usr"
            },
            "condition": {
                "type": "inList",
                "string": "${hostSystemName}",
                "list": ["Linux", "Darwin"]
            },
            "installDir": "${sourceParentDir}/install/x64"
        },
        {
            "name": "shared-debug",
            "displayName": "Shared (Debug)",
            "description": "Configure static Debug build",
            "inherits": "shared-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-static-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "windows-static-debug"
        },
        {
            "name": "windows-static-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "windows-static-release"
        },
        {
            "name": "static-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "static-debug"
        },
        {
            "name": "static-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "static-release"
        },
        {
            "name": "shared-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "shared-debug"
        },
        {
            "name": "shared-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "shared-release"
        }
    ],
    "testPresets": [
        {
            "name": "test-base",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            },
            "hidden": true
        },
        {
            "name": "static-release",
            "description": "All project tests",
            "displayName": "Test",
            "configurePreset": "static-release",
            "inherits": "test-base"
        },
        {
            "name": "static-debug",
            "description": "All project tests",
            "displayName": "Test",
            "configurePreset": "static-debug",
            "inherits": "test-base"
        },
        {
            "name": "shared-release",
            "description": "All project tests",
            "displayName": "Test",
            "configurePreset": "shared-release",
            "inherits": "test-base"
        },
        {
            "name": "shared-debug",
            "description": "All project tests",
            "displayName": "Test",
            "configurePreset": "shared-debug",
            "inherits": "test-base"
        },
        {
            "name": "windows-static-release",
            "configurePreset": "windows-static-release",
            "displayName": "Test (Release)",
            "description": "All project tests",
            "configuration": "Release",
            "inherits": "test-base"
        },
        {
            "name": "windows-static-debug",
            "configurePreset": "windows-static-debug",
            "displayName": "Test (Debug)",
            "description": "All project tests",
            "configuration": "Debug",
            "inherits": "test-base"
        }
    ],
    "packagePresets": [
        {
            "name": "debian-package",
            "displayName": "webpier (DEB)",
            "description": "Debian package",
            "configurePreset": "static-release",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generators": [
                "DEB"
            ],
            "configurations": [
                "Release"
            ],
            "variables": {
                "CPACK_DEBIAN_PACKAGE_RELEASE": "beta",
                "CPACK_DEBIAN_PACKAGE_MAINTAINER": "Community",
                "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "An application for forwarding TCP services through NAT",
                "CPACK_PACKAGE_DESCRIPTION": "The 'webpier' app allows to forward non-public TCP services\nvia an UDP tunnel without using third-party relay servers.",
                "CPACK_COMPONENTS_ALL": "binary_files;debian_files",
                "CPACK_DEBIAN_FILE_NAME": "DEB-DEFAULT",
                "CPACK_DEBIAN_PACKAGE_SHLIBDEPS": "ON",
                "CPACK_DEBIAN_PACKAGE_SECTION": "admin",
                "CPACK_DEBIAN_PACKAGE_GENERATE_SHLIBS": "ON",
                "CPACK_DEB_COMPONENT_INSTALL": "ON",
                "CPACK_COMPONENTS_ALL_IN_ONE_PACKAGE": "ON"
            },
            "packageName": "webpier",
            "packageDirectory": ".."
        },
        {
            "name": "windows-msi",
            "displayName": "webpier (MSI)",
            "configurePreset": "windows-static-release",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generators": [
                "WIX"
            ],
            "configurations": [
                "Release"
            ],
            "packageName": "WebPier",
            "packageDirectory": ".."
        }
    ]
}
