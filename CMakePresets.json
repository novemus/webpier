{
    "version": 6,
    "configurePresets": [
        {
            "name": "config-base",
            "hidden": true,
            "cacheVariables": {
                "WEBPIER_SKIP_TEST_RULES": "OFF",
                "WEBPIER_SKIP_INSTALL_RULES": "OFF",
                "WEBPIER_SKIP_PACKAGE_RULES": "OFF"
            },
            "binaryDir": "${sourceDir}/out/$env{TARGET_OS}/$env{TARGET_ARCH}/build/${presetName}",
            "installDir": "${sourceDir}/out/$env{TARGET_OS}/$env{TARGET_ARCH}/install"
        },
        {
            "name": "relwithdebinfo-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CONFIGURATION_TYPES": "RelWithDebInfo"
            }
        },
        {
            "name": "release-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CONFIGURATION_TYPES": "Release"
            }
        },
        {
            "name": "debug-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CONFIGURATION_TYPES": "Debug",
                "CMAKE_DEBUG_POSTFIX": "d"
            }
        },
        {
            "name": "static-relwithdebinfo",
            "inherits": ["config-base", "relwithdebinfo-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded"
            }
        },
        {
            "name": "static-release",
            "inherits": ["config-base", "release-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded"
            }
        },
        {
            "name": "static-debug",
            "inherits": ["config-base", "debug-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebug"
            }
        },
        {
            "name": "shared-relwithdebinfo",
            "inherits": ["config-base", "relwithdebinfo-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL"
            }
        },
        {
            "name": "shared-release",
            "inherits": ["config-base", "release-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL"
            }
        },
        {
            "name": "shared-debug",
            "inherits": ["config-base", "debug-base"],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebugDLL"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "shared-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "shared-debug"
        },
        {
            "name": "shared-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "shared-release"
        },
        {
            "name": "shared-relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "configuration": "RelWithDebInfo",
            "configurePreset": "shared-relwithdebinfo"
        },
        {
            "name": "static-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "static-debug"
        },
        {
            "name": "static-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "static-release"
        },
        {
            "name": "static-relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "configuration": "RelWithDebInfo",
            "configurePreset": "static-relwithdebinfo"
        }
    ],
    "testPresets": [
        {
            "name": "test-base",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            },
            "hidden": true
        },
        {
            "name": "static-release",
            "configurePreset": "static-release",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "static-relwithdebinfo",
            "configurePreset": "static-relwithdebinfo",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "static-debug",
            "configurePreset": "static-debug",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "shared-release",
            "configurePreset": "shared-release",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "shared-relwithdebinfo",
            "configurePreset": "shared-relwithdebinfo",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        },
        {
            "name": "shared-debug",
            "configurePreset": "shared-debug",
            "displayName": "Test",
            "description": "All project tests",
            "inherits": "test-base"
        }
    ],
    "packagePresets": [
        {
            "name": "debian-package",
            "displayName": "webpier (DEB)",
            "description": "Debian package",
            "configurePreset": "static-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "variables": {
                "CPACK_COMPONENTS_ALL": "binary_files;linux_files"
            },
            "generators": [
                "DEB"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "packageName": "webpier",
            "packageDirectory": ".."
        },
        {
            "name": "linux-package",
            "displayName": "webpier (RPM)",
            "description": "Linux package",
            "configurePreset": "static-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "variables": {
                "CPACK_COMPONENTS_ALL": "binary_files;linux_files"
            },
            "generators": [
                "RPM"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "packageName": "webpier",
            "packageDirectory": ".."
        },
        {
            "name": "windows-msi",
            "displayName": "webpier (MSI)",
            "description": "Windows installer",
            "configurePreset": "static-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generators": [
                "WIX"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_COMPONENTS_ALL": "binary_files;windows_files"
            },
            "packageName": "WebPier",
            "packageDirectory": ".."
        },
        {
            "name": "windows-pdb",
            "displayName": "webpier (PDB)",
            "description": "Windows debug symbols",
            "configurePreset": "static-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generators": [
                "ZIP"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_COMPONENTS_ALL": "pdb_files"
            },
            "packageDirectory": ".."
        },
        {
            "name": "darwin-pkg",
            "displayName": "webpier (PKG)",
            "configurePreset": "static-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "generators": [
                "productbuild"
            ],
            "variables": {
                "CPACK_COMPONENTS_ALL": "binary_files;darwin_files"
            },
            "configurations": [
                "RelWithDebInfo"
            ],
            "packageName": "WebPier",
            "packageDirectory": ".."
        },
        {
            "name": "darwin-dbg",
            "displayName": "webpier (DBG)",
            "description": "Darwin debug symbols",
            "configurePreset": "static-relwithdebinfo",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "generators": [
                "ZIP"
            ],
            "configurations": [
                "RelWithDebInfo"
            ],
            "variables": {
                "CPACK_PACKAGING_INSTALL_PREFIX": "",
                "CPACK_COMPONENTS_ALL": "dbg_files"
            },
            "packageDirectory": ".."
        }
    ],
    "workflowPresets": [
        {
            "name": "windows-msi",
            "displayName": "webpier (MSI)",
            "description": "Windows MSI",
            "steps": [
                {
                    "type": "configure",
                    "name": "static-relwithdebinfo"
                },
                {
                    "type": "build",
                    "name": "static-relwithdebinfo"
                },
                {
                    "type": "test",
                    "name": "static-relwithdebinfo"
                },
                {
                    "type": "package",
                    "name": "windows-msi"
                }
            ]
        },
        {
            "name": "debian-package",
            "displayName": "webpier (DEB)",
            "description": "Debian package",
            "steps": [
                {
                    "type": "configure",
                    "name": "static-relwithdebinfo"
                },
                {
                    "type": "build",
                    "name": "static-relwithdebinfo"
                },
                {
                    "type": "test",
                    "name": "static-relwithdebinfo"
                },
                {
                    "type": "package",
                    "name": "debian-package"
                }
            ]
        },
        {
            "name": "linux-package",
            "displayName": "webpier (RPM)",
            "description": "Linux package",
            "steps": [
                {
                    "type": "configure",
                    "name": "static-relwithdebinfo"
                },
                {
                    "type": "build",
                    "name": "static-relwithdebinfo"
                },
                {
                    "type": "test",
                    "name": "static-relwithdebinfo"
                },
                {
                    "type": "package",
                    "name": "linux-package"
                }
            ]
        },
        {
            "name": "darwin-pkg",
            "displayName": "webpier (PKG)",
            "description": "Darwin package",
            "steps": [
                {
                    "type": "configure",
                    "name": "static-relwithdebinfo"
                },
                {
                    "type": "build",
                    "name": "static-relwithdebinfo"
                },
                {
                    "type": "test",
                    "name": "static-relwithdebinfo"
                },
                {
                    "type": "package",
                    "name": "darwin-pkg"
                }
            ]
        }
    ]
}
